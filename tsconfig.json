{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@suite/*": [
        "src/*"
      ],
      "@animations/*": [
        "src/animations/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@commands/*": [
        "src/commands/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@home/*": [
        "src/home/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@icons/*": [
        "src/icons/*"
      ],
      "@intro/*": [
        "src/intro/*"
      ],
      "@jupyter/*": [
        "src/jupyter/*"
      ],
      "@kineticlaw/*": [
        "src/kineticlaw/*"
      ],
      "@llm/*": [
        "src/llm/*"
      ],
      "@measurements/*": [
        "src/measurements/*"
      ],
      "@modelling/*": [
        "src/modelling/*"
      ],
      "@parameters/*": [
        "src/parameters/*"
      ],
      "@proteins/*": [
        "src/proteins/*"
      ],
      "@reactions/*": [
        "src/reactions/*"
      ],
      "@smallmols/*": [
        "src/smallmols/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      "@tauri/*": [
        "src/tauri/*"
      ],
      "@suite-types/*": [
        "src/types/*"
      ],
      "@utilities/*": [
        "src/utilities/*"
      ],
      "@vessels/*": [
        "src/vessels/*"
      ],
      "@visualisation/*": [
        "src/visualisation/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/commands/jupyter.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}