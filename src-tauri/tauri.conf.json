{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "EnzymeML Suite",
    "version": "0.0.1"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "http": {
        "all": true,
        "request": true
      },
      "shell": {
        "open": true
      },
      "window": {
        "startDragging": true,
        "maximize": true,
        "unmaximize": true,
        "minimize": true,
        "close": true
      }
    },
    "windows": [
      {
        "title": "EnzymeML Suite",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 400,
        "decorations": false,
        "resizable": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "enzymeml",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
